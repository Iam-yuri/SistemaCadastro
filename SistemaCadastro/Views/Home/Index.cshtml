@{
    ViewData["Title"] = "Digite o CPF";
}

<h2 style="text-align:center;">Bem Vindo!</h2>

<div class="main-container">
    <form method="post" asp-action="VerificarCPF" class="form-horizontal">
        <div class="cpf-container">
            <input type="text" id="cpfInput" name="cpf" maxlength="11" placeholder="Digite seu CPF" />
        </div>

        <div id="teclado">
            @for (int i = 1; i <= 9; i++)
            {
                <button type="button" onclick="addNumero('@i')">@i</button>
            }
            <button type="button" onclick="backspace()">←</button>
            <button type="button" onclick="addNumero('0')">0</button>
            <button type="submit">✔️</button>
        </div>
    </form>
</div>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f0f0f0;
    }

    .main-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80vh;
    }

    .form-horizontal {
        display: flex;
        gap: 50px; /* Espaçamento entre o campo e o teclado */
    }

    .cpf-container {
        display: flex;
        align-items: center;
    }

    #cpfInput::placeholder {
        color: #999;
        font-style: italic;
    }

    #cpfInput {
        font-size: 28px;
        padding: 12px;
        width: 300px;
        text-align: center;
        border-radius: 8px;
        border: 1px solid #ccc;
    }

    #teclado {
        display: grid;
        grid-template-columns: repeat(3, 100px);
        gap: 10px;
    }

        #teclado button {
            width: 100px;
            height: 100px;
            font-size: 28px;
            border-radius: 12px;
            border: none;
            background-color: #007BFF;
            color: white;
            cursor: pointer;
            box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
            transition: background-color 0.2s;
        }

            #teclado button:hover {
                background-color: #0056b3;
            }
</style>

<script>
    function addNumero(n) {
        let campo = document.getElementById('cpfInput');
        campo.value += n;
    }

    function backspace() {
        let campo = document.getElementById('cpfInput');
        campo.value = campo.value.slice(0, -1);
    }
</script>


